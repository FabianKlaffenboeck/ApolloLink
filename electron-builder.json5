{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "at.FKLab.ApolloLink",
  "asar": true,
  "productName": "ApolloLink_by_FKLab",
  "directories": {
    "output": "release"
  },
  "extraMetadata": {
    "name": "ApolloLink_by_FKLab"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
