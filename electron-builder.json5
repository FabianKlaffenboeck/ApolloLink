  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "arm64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "arm64", "ia32"]
      }
    ],
  },
  "nsis": {
    "artifactName": "win-${arch}-${productName}-installer-${version}.${ext}",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "portable": {
    "artifactName": "win-${arch}-${productName}-portable-${version}.${ext}",
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64", "ia32"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64", "ia32"]
      },
      {
        "target": "rpm",
        "arch": [
          "x64",
          "arm64",
          "ia32"
        ]
      }
    ],
    "category": "Utility",
  },
  appImage: {
    "artifactName": "linux-${arch}-${productName}-${version}.${ext}"
  },
  deb: {
    "artifactName": "linux-${arch}-${productName}-${version}.${ext}"
  },
  rpm: {
    "artifactName": "linux-${arch}-${productName}-${version}.${ext}"
  }
}
